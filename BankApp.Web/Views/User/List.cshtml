@model List<UserDto>


<h4>List Of Users</h4>
<div class="container fluid">
    <a asp-action="Create" asp-controller="User" class="btn btn-dark">Add User</a>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Account Count</th>
                <th>Create Account</th>
                <th>Details</th>
                <th>Delete User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name @user.Surname</td>
                    <td><getAccountCount user-id="@user.Id"></getAccountCount></td>        
                    <td>
                        <a asp-action="Create" asp-controller="Account" asp-route-id="@user.Id" class="btn btn-warning">Create Account</a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="User" asp-route-id="@user.Id" class="btn btn-info">Account Details</a>
                    </td>
                    <td><a asp-action="Remove" asp-controller="User" asp-route-userId="@user.Id" class="btn btn-danger">Remove User</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>